<!-- app/views/user_mailer/contract_submitted.html.erb -->

<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <title><%= I18n.t("mailers.user_mailer.contract_submitted.title") %></title>
  </head>

  <body>
    <h1><%= I18n.t("mailers.user_mailer.contract_submitted.greeting", name: @contract.applicant_user.email) %></h1>

    <p><%= I18n.t("mailers.user_mailer.contract_submitted.created_line", project: @contract.lot.project.name) %></p>

    <p><%= I18n.t("mailers.user_mailer.contract_submitted.details") %></p>

    <ul>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.project", project: @contract.lot.project.name) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.lot", lot: @contract.lot.name, length: @contract.lot.length, width: @contract.lot.width) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.financing", type: @contract.financing_type.capitalize) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.term", term: @contract.payment_term) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.reserve", amount: number_to_currency(@contract.reserve_amount)) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.down_payment", amount: number_to_currency(@contract.down_payment)) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_submitted.created_at", datetime: @contract.created_at.strftime("%d/%m/%Y %H:%M")) %></strong></li>
    </ul>

    <p><%= I18n.t("mailers.user_mailer.contract_submitted.footer") %></p>

    <p>
      <%= I18n.t("mailers.user_mailer.contract_submitted.footer") %><br />
      <%= I18n.t("mailers.user_mailer.reservation_approved.thanks") %>
    </p>

    <footer>
      <hr />
      <p style="font-size: 0.8em; color: #888;">
        <%= I18n.t("mailers.user_mailer.contract_submitted.project", project: @contract.lot.name) %>
      </p>
    </footer>
  </body>
</html>