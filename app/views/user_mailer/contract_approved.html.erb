<!-- app/views/user_mailer/contract_approved.html.erb -->

<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <title><%= I18n.t("mailers.user_mailer.contract_approved.title") %></title>
  </head>

  <body>
    <h1><%= I18n.t("mailers.user_mailer.contract_approved.greeting", name: @contract.applicant_user.email) %></h1>

    <p><%= I18n.t("mailers.user_mailer.contract_approved.approved_line", project: @contract.lot.project.name) %></p>

    <p><%= I18n.t("mailers.user_mailer.contract_approved.details") %></p>

    <ul>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.project", project: @contract.lot.project.name) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.lot", lot: @contract.lot.name) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.financing", type: @contract.financing_type.capitalize) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.term", term: @contract.payment_term) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.reserve", amount: number_to_currency(@contract.reserve_amount)) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.down_payment", amount: number_to_currency(@contract.down_payment)) %></strong></li>
      <li><strong><%= I18n.t("mailers.user_mailer.contract_approved.approved_at", datetime: @contract.approved_at.strftime("%d/%m/%Y %H:%M")) %></strong></li>
    </ul>

    <p><%= I18n.t("mailers.user_mailer.contract_approved.footer") %></p>

    <footer>
      <hr />
      <p style="font-size: 0.8em; color: #888;">
        <%= I18n.t("mailers.user_mailer.contract_approved.project", project: @contract.lot.name) %>
      </p>
    </footer>
  </body>
</html>